<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('includes/navigation.ejs') %>

    <main>
        <h1>Remove a Book</h1>
        <form class="product-form"  action="/admin/remove-product" method="POST" id="removeProduct">
            <div class="form-control">
                <label for="removeProduct">Please select the book to remove</label>
                <select name="removeProduct" value="removeProduct">
                    <option value="" selected disabled>Choose a book</option>
                    <% for (let product of prods) { %> 
                        <option value='<%= product.title %>'><%= product.title %></option>
                    <% } %>
                </select>
            </div>
            <div class="btn">
                <button type="submit">Remove Book</button>
            </div>
        </form>
    </main>

    <%- include('includes/end.ejs') %>
